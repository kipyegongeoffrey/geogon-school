body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background: linear-gradient(to right, #e0f7fa, #ffffff);
  margin: 0;
  padding: 0;
  color: #333;
}

header {
  background: linear-gradient(135deg, #2d6a4f, #40916c);
  color: white;
  text-align: center;
  padding: 30px 20px;
}

header nav a {
  color: white;
  text-decoration: none;
  margin: 0 12px;
  font-weight: bold;
  transition: color 0.3s;
}

header nav a:hover {
  color: #ffeb3b;
}

.logo {
  max-height: 80px;
  margin-bottom: 10px;
}

section {
  background-color: white;
  padding: 40px 20px;
  margin: 30px auto;
  max-width: 1000px;
  border-radius: 10px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
}

h2, h3 {
  color: #2d6a4f;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.feature-card {
  background: #f0f4f8;
  padding: 20px;
  border-radius: 8px;
  text-align: center;
  transition: transform 0.3s;
}

.feature-card:hover {
  transform: translateY(-5px);
}

.btn-primary, .btn-secondary {
  display: inline-block;
  padding: 12px 25px;
  border-radius: 6px;
  text-decoration: none;
  font-weight: bold;
}

.btn-primary {
  background-color: #0077b6;
  color: white;
}

.btn-primary:hover {
  background-color: #023e8a;
}

.btn-secondary {
  background-color: #40916c;
  color: white;
}

.btn-secondary:hover {
  background-color: #2d6a4f;
}

footer {
  background-color: #2d6a4f;
  color: white;
  text-align: center;
  padding: 20px;
}
.platforms-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  margin-top: 30px;
}

.platform-card {
  background: #f0f4f8;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
  transition: transform 0.3s, box-shadow 0.3s;
}

.platform-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 20px rgba(0,0,0,0.15);
}

.platform-icon {
  max-width: 80px;
  margin-bottom: 10px;
}
.booking-form {
  display: flex;
  flex-direction: column;
}

.booking-form label {
  margin-top: 10px;
  margin-bottom: 5px;
  font-weight: bold;
}

.booking-form input,
.booking-form select,
.booking-form textarea {
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 16px;
  margin-bottom: 15px;
}

.booking-form textarea {
  resize: vertical;
  min-height: 100px;
}

.booking-form button {
  background-color: #0077b6;
  color: white;
  padding: 14px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-weight: bold;
  transition: background-color 0.3s;
}

.booking-form button:hover {
  background-color: #023e8a;
}
.subjects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.subject-card {
  background: #f0f4f8;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s, box-shadow 0.3s;
}

.subject-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

.packages-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.package-card {
  background: #ffffff;
  border: 2px solid #2d6a4f;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
  font-weight: bold;
  transition: transform 0.3s, background-color 0.3s;
}

.package-card:hover {
  transform: translateY(-5px);
  background-color: #e0f7fa;
}

.package-card.popular {
  border-color: #0077b6;
  background-color: #caf0f8;
}
.package-card {
  display: block;
  text-decoration: none;
  color: inherit;
}

.package-card:hover {
  background-color: #e0f7fa;
}
ul.skills-list {
  columns: 2;
  -webkit-columns: 2;
  -moz-columns: 2;
  list-style: square inside;
  gap: 20px;
}

section ul {
  margin: 15px 0;
}

section ul li {
  margin-bottom: 8px;
}
.logo {
  width: 100px; /* You can adjust size as needed */
  height: 100px;
  object-fit: cover;
  border-radius: 50%;
  float: left;
  margin-right: 15px;
  margin-bottom: 10px;
}
.header-top {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15px;
}

.school-name {
  margin: 0 0 0 15px;
  font-size: 28px;
  font-weight: bold;
  color: white;
}

.logo {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: 50%;
}
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20px;
}

.header-left {
  display: flex;
  align-items: center;
}

.school-name {
  margin-left: 12px;
  font-size: 24px;
  font-weight: bold;
  color: white;
}

.logo {
  width: 70px;
  height: 70px;
  object-fit: cover;
  border-radius: 50%;
}

nav a {
  color: white;
  text-decoration: none;
  margin: 0 10px;
  font-weight: bold;
  transition: color 0.3s;
}

nav a:hover {
  color: #ffeb3b;
}
.gallery-section {
  padding: 50px 20px;
  max-width: 1200px;
  margin: 30px auto;
  text-align: center;
}

.gallery-section h2 {
  color: #0077b6;
  margin-bottom: 10px;
}

.gallery-section p {
  margin-bottom: 30px;
  font-size: 1.1em;
  color: #555;
}

.gallery-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}

.gallery-grid img {
  width: 100%;
  border-radius: 10px;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s, box-shadow 0.3s;
}

.gallery-grid img:hover {
  transform: scale(1.05);
  box-shadow: 0 12px 25px rgba(0, 0, 0, 0.2);
}
nav a.active {
  background-color: #ffeb3b; /* Yellow background */
  color: #2d6a4f; /* Dark green text */
  border-radius: 5px;
  padding: 6px 12px;
}
header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background-color: #ffffff; /* white background */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 20px;
}
.topics-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  margin-top: 20px;
}

.topic-card {
  flex: 1 1 300px;
  background: #f7f9fc;
  border: 2px solid #4CAF50;
  border-radius: 12px;
  padding: 20px;
  transition: transform 0.3s, box-shadow 0.3s;
}

.topic-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 16px rgba(0,0,0,0.2);
}

.topic-card h3 {
  color: #4CAF50;
}

.topic-card ul {
  padding-left: 20px;
}

.btn-primary, .link-button {
  background: #4CAF50;
  color: white;
  padding: 10px 20px;
  text-decoration: none;
  border-radius: 6px;
  display: inline-block;
}

.btn-primary:hover, .link-button:hover {
  background: #45a049;
}

.book-button-center {
  text-align: center;
  margin: 40px 0;
}
