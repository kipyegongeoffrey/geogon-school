  <section class="booking-section">
    <h2>üìÖ Book Your Session</h2>
    <p>Secure your personalized one-on-one learning experience today. We look forward to guiding you to success!</p>
    <form action="https://formspree.io/f/xjkrjpqj" method="POST" class="booking-form">
      <label for="parentName">üë§ Parent/Student Name:</label>
      <input type="text" id="parentName" name="parentName" required placeholder="Enter your full name">

      <label for="email">üìß Email:</label>
      <input type="email" id="email" name="email" required placeholder="Enter your email address">

      <label for="subject">üìö Subject:</label>
      <select id="subject" name="subject" required>
        <option value="">Select a subject</option>
        <option value="Mathematics">Mathematics</option>
        <option value="Computer Studies">Computer Studies</option>
        <option value="Computer Science">Computer Science</option>
        <option value="ICT">ICT</option>
      </select>

      <label for="topic">üìÑ Topic:</label>
      <select id="topic" name="topic" required>
        <option value="">Select a topic</option>
        <!-- 8-4-4 Mathematics -->
        <option value="Algebra">Algebra</option>
        <option value="Geometry">Geometry</option>
        <option value="Trigonometry">Trigonometry</option>
        <option value="Statistics & Probability">Statistics & Probability</option>
        <option value="Quadratic Equations">Quadratic Equations</option>
        <option value="Vectors">Vectors</option>
        <option value="Mensuration">Mensuration (Area & Volume)</option>
        <option value="Coordinate Geometry">Coordinate Geometry</option>
        <option value="Surds & Logarithms">Surds & Logarithms</option>
        <option value="Sequences and Series">Sequences and Series</option>
        <!-- 8-4-4 Computer Studies -->
        <option value="Computer Basics & Applications">Computer Basics & Applications</option>
        <option value="Word Processing & Spreadsheets">Word Processing & Spreadsheets</option>
        <option value="Databases">Databases</option>
        <option value="Internet & E-mail">Internet & E-mail</option>
        <option value="Programming Basics">Programming Basics</option>
        <option value="Computer Networks">Computer Networks</option>
        <option value="Data Security & Ethics">Data Security & Ethics</option>
        <option value="System Development Life Cycle">System Development Life Cycle</option>
        <!-- IGCSE Mathematics -->
        <option value="Number and Algebra">Number and Algebra</option>
        <option value="Geometry and Measure">Geometry and Measure</option>
        <option value="Probability">Probability</option>
        <option value="Statistics">Statistics</option>
        <option value="Graphs and Functions">Graphs and Functions</option>
        <option value="Mensuration (IGCSE)">Mensuration</option>
        <option value="Vectors and Transformations">Vectors and Transformations</option>
        <option value="Sequences & Series (IGCSE)">Sequences & Series</option>
        <option value="Differentiation and Integration">Differentiation and Integration</option>
        <!-- IGCSE Computer Science & ICT -->
        <option value="Hardware and Software">Hardware and Software</option>
        <option value="Number Systems & Data Representation">Number Systems & Data Representation</option>
        <option value="Networks & Communication">Networks & Communication</option>
        <option value="Internet and Web Technologies">Internet and Web Technologies</option>
        <option value="Logic Gates & Boolean Algebra">Logic Gates & Boolean Algebra</option>
        <option value="Programming (Python, pseudocode)">Programming (Python, pseudocode)</option>
        <option value="Algorithms & Problem-Solving">Algorithms & Problem-Solving</option>
        <option value="Data Security and Privacy">Data Security and Privacy</option>
        <option value="Spreadsheets & Databases">Spreadsheets & Databases</option>
        <option value="ICT Applications and Social Impacts">ICT Applications and Social Impacts</option>
      </select>

      <label for="hours">‚è∞ Number of Hours:</label>
      <select id="hours" name="hours" required>
        <option value="">Select package</option>
        <option value="1">1 hour (Ksh 1,000)</option>
        <option value="2">2 hours (Ksh 1,800)</option>
        <option value="3">3 hours (Ksh 2,800)</option>
        <option value="4">4 hours (Ksh 3,700)</option>
        <option value="5">5 hours (Ksh 4,800)</option>
      </select>

      <label for="message">üí¨ Additional Message:</label>
      <textarea id="message" name="message" rows="4" placeholder="Any specific details or questions?"></textarea>

      <button type="submit" class="btn-primary">Submit Booking</button>
    </form>
  </section>

